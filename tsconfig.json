{
  "include": ["src/**/*"],

  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2017",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
